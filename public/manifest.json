{
    "manifest_version": 3,
    "version": "1.0.0",
    "name": "WalkMe Capture",
    "description": "WalkMe Capture is designed to help create step details for the WalkMe library.",
    "icons": {
        "16": "favicon-16x16.png",
        "32": "favicon-32x32.png",
        "192": "android-chrome-192x192.png",
        "180": "apple-touch-icon.png",
        "512": "android-chrome-512x512.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": "favicon-32x32.png"
    },
    "permissions": [
        "tabs",
        "scripting",
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "capture/background.js"
    }
}